<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add hover effect for team members
        const teamMembers = document.querySelectorAll('.team-member');
        teamMembers.forEach(member => {
            const socialDiv = member.querySelector('.team-social');
            socialDiv.style.opacity = '0';
            socialDiv.style.transition = 'all 0.3s ease';
            
            member.addEventListener('mouseover', function() {
                socialDiv.style.opacity = '1';
            });
            
            member.addEventListener('mouseout', function() {
                socialDiv.style.opacity = '0';
            });
        });
    });
</script>