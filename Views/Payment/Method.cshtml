    <div class="d-flex justify-content-between mt-4">
        <a href="@Url.Action("Checkout", "Payment")" class="btn text-white fw-semibold" style="background-color: #a35429;">Back</a>

        <form action="@Url.Action("ProceedToPayment", "Payment")" method="post">
            <input type="hidden" id="paymentMethod" name="paymentMethod" value="paymaya" />
            <button type="submit" class="btn text-white fw-semibold" style="background-color: #a35429;">
                Proceed to Payment
            </button>
        </form>
    </div>
</div>